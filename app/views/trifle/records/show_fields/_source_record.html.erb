<span itemprop="<%= key %>" itemscope itemtype="http://schema.org/Thing">
  <% if record[key].try(:start_with?,'schmit:') %>
    <%= link_to(record[key], record.to_model.source_url) %>
  <% elsif record[key].present? && record.to_model.public_source_link.present? %>
    <%= link_to(record[key], record.to_model.public_source_link['@id']) %>
  <% else %>
    <%= record[key] %>
  <% end %>
</span>
